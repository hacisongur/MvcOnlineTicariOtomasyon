@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="background-color:lightcyan; margin-top: 15px ">
    <tr>
        <th>ID</th>
        <th>PERSONEL ADI</th>
        <th>SOYAD</th>
        <th>GÖRSEL</th>
        <th>DEPARTMAN</th>
        <th>GÜNCELLE</th>
        <th>SATIŞLAR</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td> @k.PersonelID</td>
    <td> @k.PersonelAd</td>
    <td> @k.PersonelSoyad</td>
    <td> @k.PersonelGorsel</td>
    <td> @k.Departman.DepartmanAd</td>
    <td><a href="/Personel/PersonelGetir/@k.PersonelID" class="btn btn-success">Güncelle</a></td>
    <td><a href="/Departman/DepartmanPersonelSatis/@k.PersonelID" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
</tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>